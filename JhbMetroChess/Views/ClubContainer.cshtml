@inherits Umbraco.Web.Mvc.UmbracoTemplatePage
@using JhbMetroChess.Extensions
@{
	Layout = "Master.cshtml";
	var templateAssets = @Url.Content("~/assets");
	var clubContainer = CurrentPage.Site().Children.Where("DocumentTypeAlias == @0", "Clubcontainer").First();
	var clubs = clubContainer.Children.Where("DocumentTypeAlias == @0", "Club");
}

<section class="dark-wrapper opaqued parallax" data-parallax="scroll" data-image-src="@Umbraco.Media(clubContainer.topbanner).Url" data-speed="0.8">
    <div class="section-inner">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 mt30 text-center wow fadeIn" data-wow-delay="0.2s">
                    <h2 class="section-heading"><span class="theme-accent-color">Chess</span> Chess Clubs</h2>
                </div>
            </div>
        </div>
    </div>
</section>

<section>
    <div class="section-inner">
        <div class="container">
            <div class="wow fadeIn" data-wow-delay="0.2s">
                <ul class="portfolio-filter mb30 text-center list-inline wow fadeIn" data-wow-delay="0.2s">
                    <li><a class="btn btn-primary btn-transparent active" href="#" data-filter="*">All</a></li>
                    <li><a class="btn btn-primary btn-transparent" href="#" data-filter=".upcoming">Jhb North</a></li>
					<li><a class="btn btn-primary btn-transparent" href="#" data-filter=".inprogress">Jhb South</a></li>
					<li><a class="btn btn-primary btn-transparent" href="#" data-filter=".previous">Jhb East</a></li>
					<li><a class="btn btn-primary btn-transparent" href="#" data-filter=".previous">Jhb West</a></li>
                </ul>
                <ul class="portfolio-items nopadding-lr isotope list-unstyled">
				@foreach (var club in clubs)
				{
					<li class="col-sm-4 col-xs-6 portfolio-item isotope-item">
						<div class="col-xs-12 nopadding-lr hover-item">
							<img src="@Umbraco.Media(clubContainer.clubBackground).Url" class="img-responsive smoothie" alt="">
							<div class="overlay-item-caption smoothie wow fadeIn" data-wow-delay="0.2s">
								<div class="vertical-center smoothie">
									@*<strong class="heading-font"><span class="theme-accent-color-bg">@tournament.startDate.ToString("d MMM yyyy")</span></strong>*@
									<h3><a href="single-post.html" title="view project">@club.Name</a></h3>
								</div>
							</div>
							<div class="hover-item-caption smoothie">
								<div class="vertical-center smoothie">
									<a href="@templateAssets/img/portfolio/portfolio1.jpg" title="view Gallery" class="btn btn-primary btn-white page-scroll lb-link smoothie"><i class="fa ">Details</i></a>
									<a href="single-portfolio-fullscreen-video.html" class="smoothie btn btn-primary btn-white page-scroll"><i class="fa ">Enter</i></a>
								</div>
								<span class="theme-accent-color-bg hover-bar"></span>
							</div>
						</div>
					</li>
				}
                </ul>
            </div>
        </div>
    </div>
</section>

<section class="opaqued light-opaqued parallax" data-parallax="scroll" data-image-src="@templateAssets/img/bg/bg_bw1.jpg" data-speed="0.8">
    <div class="section-inner">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div id="message"></div>
                    <form method="post" action="sendemail.php" id="contactform" class="main-contact-form wow fadeIn" data-wow-delay="0.2s">
                        <input type="text" class="form-control col-md-4" name="name" placeholder="Your Name *" id="name" required data-validation-required-message="Please enter your name." />
                        <input type="text" class="form-control col-md-4" name="email" placeholder="Your Email *" id="email" required data-validation-required-message="Please enter your email address." />
                        <input type="text" class="form-control col-md-4" name="website" placeholder="Your URL *" id="website" required data-validation-required-message="Please enter your web address." />
                        <textarea name="comments" class="form-control" id="comments" placeholder="Your Message *" required data-validation-required-message="Please enter a message."></textarea>
                        <input class="btn btn-primary mt30 pull-right" type="submit" name="submit" value="Submit" />
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
